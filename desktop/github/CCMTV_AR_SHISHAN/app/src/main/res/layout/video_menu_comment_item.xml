<?xml version="1.0" encoding="utf-8"?><!-- 相关item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.linlic.ccmtv.yx.utils.CustomImageView
            android:id="@+id/video_menu_comment_item_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_61" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/video_menu_comment_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:text="李医生"
                        />
                    <TextView
                        android:id="@+id/video_menu_comment_item_times"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:textSize="13sp"
                        android:textColor="#999"
                        android:text="25分钟前 " />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center|right"
                    android:gravity="center|right"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/video_menu_comment_delete"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/delete01"
                        />

                    <TextView
                        android:id="@+id/video_menu_comment_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:background="@drawable/anniu20"
                        android:gravity="center|right"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:textSize="12sp"
                        android:text="回复TA"
                        android:textColor="@color/videofive_comment_reply" />

                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/video_menu_comment_item_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center|left"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="" />


            <LinearLayout
                android:id="@+id/video_comment_item_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="#F7F7F7"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/video_comment_item_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <TextView
                    android:id="@+id/comment_itme4"
                    android:layout_width="wrap_content"
                    android:textColor="@color/videofive_comment_reply"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="查看全部"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#F3F3F3"
                />

            <TextView
                android:id="@+id/video_menu_comment_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
            <TextView
                android:id="@+id/video_menu_comment_item_cid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>