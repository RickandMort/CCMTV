    <!--以下为2018-04-10新修改界面-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@mipmap/integral_main_top_bg"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/arrow_back"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:onClick="back">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/back_inva"/>
            </LinearLayout>

            <TextView
                android:id="@+id/activity_title_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="零钱充值"
                android:textColor="#FFFEFD"
                android:textSize="18sp"/>


        </FrameLayout>

        <TextView
            android:id="@+id/cashier_recharge_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="账户余额：0元"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="充值金额"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/amount_of_charge"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_et_wallet_chrage"
            android:maxLength="6"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="18dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_num1"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:text="50元"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@mipmap/qian_chongzhi"/>

                <TextView
                    android:id="@+id/tv_num2"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:text="100元"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@mipmap/qian_chongzhi"
                    android:layout_marginLeft="15dp"/>


                <TextView
                    android:id="@+id/tv_num3"
                    android:layout_width="45dp"
                    android:layout_height="23dp"
                    android:text="300元"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@mipmap/qian_chongzhi"
                    android:layout_marginLeft="15dp"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:text="单笔限额20万"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="15sp"/>


        </RelativeLayout>



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/wallet_small_dot"
        android:drawablePadding="5dp"
        android:text="充值最低限额50元"
        android:textColor="#656565"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_recharge"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@mipmap/bg_btn_wallet_chrage"
        android:onClick="cashier_recharge"
        android:text="充值"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

</LinearLayout>