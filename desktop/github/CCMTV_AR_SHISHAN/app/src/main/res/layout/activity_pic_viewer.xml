<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <com.linlic.ccmtv.yx.widget.ViewPagerFixed
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

  <!--  <TextView
        android:id="@+id/tv_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="1/3"
        android:layout_gravity="bottom|center"
        android:textSize="30sp" />-->

    <TextView
        android:id="@+id/tv_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/adv_textviewbackground"
        android:gravity="center"
        android:text="1/3"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textColor="#FFF" />

    <LinearLayout
        android:id="@+id/ll_pic_sign"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="35dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_pic_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="您可以进行签到了~"
            android:textSize="12sp"
            android:textColor="#FFF"/>

        <LinearLayout
            android:id="@+id/ll_pic_sign2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:background="@drawable/btn_white_shape1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到"
                android:textColor="#FFF"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:textColor="#FFF"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/pic_sign1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFF"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#FFF"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/pic_sign2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#FFF"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textColor="#FFF"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pic_sign3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:background="@drawable/btn_white_shape1"
            android:visibility="gone">

            <TextView
                android:id="@+id/pic_sign_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进入测试"
                android:textColor="#FFF"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>