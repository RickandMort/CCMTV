<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@mipmap/personal_profile_bg"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <!---->
                <LinearLayout
                    android:id="@+id/arrow_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="back">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="11dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/bark" />
                </LinearLayout>

                <TextView
                    android:id="@+id/activity_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="退出圈子"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:textColor="#F2F7FE"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:textSize="18sp" />
                <!---->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                    </LinearLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:src="@mipmap/activity_my_04" />
                    <TextView
                        android:id="@+id/iv_red_dians"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-8dp"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/integral_description"
                        android:background="@mipmap/red_dian2"
                        android:visibility="visible" />

                </FrameLayout>


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.linlic.ccmtv.yx.utils.CustomImageView
                android:id="@+id/my_myhead"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="2dp"
                android:scaleType="fitXY"
                android:src="@mipmap/activity_my_02" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/personal_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="用户123"
                        android:textColor="#F2F7FE"
                        />
                    <ImageView
                        android:id="@+id/personal_profile_img1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/activity_my_06" />

                    <ImageView
                        android:id="@+id/personal_profile_img2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/activity_my_07" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/personal_profile_departments"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#F2F7FE"
                        android:text="上海市长征医院 胸外科"
                        />

                    <ImageView
                        android:id="@+id/personal_profile_img3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/activity_my_06" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@mipmap/personal_profile_02"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/personal_profile_traffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="访问量：1313546"
                android:textColor="#F2F7FE"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layout_message"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/personal_profile_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#F2F7FE" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:layout_marginTop="5dp"
                    android:textColor="#F2F7FE" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/personal_profile_fan_club"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="56"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#F2F7FE" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="粉丝"
                    android:textColor="#F2F7FE" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/personal_profile_colleague"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1232"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#F2F7FE" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同事"
                    android:layout_marginTop="5dp"
                    android:textColor="#F2F7FE" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/personal_profile_blurb_layout"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/personal_profile_blurb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="简介"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="#3997F9" />

            <View
                android:id="@+id/personal_profile_blurb_view"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="#3997F9"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/personal_profile_video_layout"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/personal_profile_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="视频"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="#515151" />

            <View
                android:id="@+id/personal_profile_video_view"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:background="#3997F9"
                />
        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:id="@+id/Modify_the_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:onClick="modify_the_circle"
            android:src="@mipmap/personal_profile_06"
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/personal_profile_blurb_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_margin="15dp"
                android:lineSpacingExtra="3dp"
                android:text="世界反垃圾散发拉萨佛山警方联手打击发来撒解放啦世界反两大世界反as京东方垃圾啊上了飞机拉萨放假了打算就对啦司法局啦世界反两大世界反两大岁将两大世界反客两大世界反"
                />

            <LinearLayout
                android:id="@+id/personal_profile_blurb_null_layout"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/personal_profile_03"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#989898"
                    android:textSize="18sp"
                    android:text="您还没有填写个人简介"
                    />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="填写个人资料"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:onClick="modify_the_circle"
                    android:background="@mipmap/personal_profile_05"/>


            </LinearLayout>

        </LinearLayout>

    </FrameLayout>




    <ListView
        android:id="@+id/department_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#fff"
        android:divider="@null"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:paddingBottom="0dp" />

</LinearLayout>