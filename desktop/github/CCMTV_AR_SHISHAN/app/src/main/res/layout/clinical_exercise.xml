<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:background="@mipmap/clinical_exercise_icon01"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/arrow_back"
                        android:layout_width="45dip"
                        android:layout_height="match_parent"
                        android:onClick="back">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="11dp"
                            android:scaleType="centerInside"
                            android:src="@mipmap/arrow" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/activity_title_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="临床运动"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="190dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/clinical_exercise_icon03"
                    android:gravity="center|bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/clinical_exercise_icon04" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/main_text_step"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="40sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/main_text_step"
                            android:layout_toRightOf="@+id/main_text_step"
                            android:paddingBottom="8dp"
                            android:paddingLeft="5dp"
                            android:text="步"
                            android:textColor="#fff" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/calorie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="消耗了0卡路里"
                        android:textColor="#DDEB80" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日步数"
                        android:textColor="#fff" />

                </LinearLayout>

                <TextView
                    android:id="@+id/historical_step_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/anniu19"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="历史步数>"
                    android:textColor="#8BF4BD" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="本周运动"
                android:textColor="#333" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/monday_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/monday_view"
                            android:layout_width="1dp"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:background="#e8e8e8" />

                        <ProgressBar
                            android:id="@+id/monday_progressbar"
                            android:layout_width="10dp"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:indeterminateOnly="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/progress_vertical_gradient_simple_shape" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/tuesday_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/tuesday_view"
                            android:layout_width="1dp"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:background="#e8e8e8" />

                        <ProgressBar
                            android:id="@+id/tuesday_progressbar"
                            android:layout_width="10dp"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:indeterminateOnly="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/progress_vertical_gradient_simple_shape" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/wednesday_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/wednesday_view"
                            android:layout_width="1dp"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:background="#e8e8e8" />

                        <ProgressBar
                            android:id="@+id/wednesday_progressbar"
                            android:layout_width="10dp"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:indeterminateOnly="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/progress_vertical_gradient_simple_shape" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/thursday_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/thursday_view"
                            android:layout_width="1dp"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:background="#e8e8e8" />

                        <ProgressBar
                            android:id="@+id/thursday_progressbar"
                            android:layout_width="10dp"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:indeterminateOnly="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/progress_vertical_gradient_simple_shape" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/friday_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/friday_view"
                            android:layout_width="1dp"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:background="#e8e8e8" />

                        <ProgressBar
                            android:id="@+id/friday_progressbar"
                            android:layout_width="10dp"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:indeterminateOnly="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/progress_vertical_gradient_simple_shape" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/saturday_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/saturday_view"
                            android:layout_width="1dp"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:background="#e8e8e8" />

                        <ProgressBar
                            android:id="@+id/saturday_progressbar"
                            android:layout_width="10dp"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:indeterminateOnly="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/progress_vertical_gradient_simple_shape" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/sunday_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                        <View
                            android:id="@+id/sunday_view"
                            android:layout_width="1dp"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="5dp"
                            android:background="#e8e8e8" />

                        <ProgressBar
                            android:id="@+id/sunday_progressbar"
                            android:layout_width="10dp"
                            android:layout_height="200dp"
                            android:indeterminateOnly="false"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/progress_vertical_gradient_simple_shape"
                            android:layout_alignParentBottom="true"
                            android:layout_alignStart="@+id/sunday_view" />

                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#e8e8e8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/monday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="周一"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/tuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="周二"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/wednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="周三"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/thursday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="周四"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/friday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="周五"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/saturday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="周六"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/sunday"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="周日"
                        android:textColor="#333" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:text="以上数据仅供参考"
                android:textColor="#666" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>