<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginTop="10dp"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_ll_uploading_item"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/id_iv_item_uploading_checkbox"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:button="@drawable/upload_down_items_select_new"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingRight="3dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/id_iv_item_uploading_icon"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/img_default" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/id_iv_item_uploading_icon"
                android:layout_alignRight="@+id/id_iv_item_uploading_icon"
                android:alpha="0.45"
                android:background="#e0000000">

                <TextView
                    android:id="@+id/id_iv_item_uploading_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="45:21"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/id_iv_item_uploading_aid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/id_iv_item_uploading_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:maxLines="2"
                android:text="name"
                android:textColor="#000"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!--<TextView
                    android:id="@+id/id_iv_item_uploadingSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/id_iv_item_uploading_pbProgress"
                    android:layout_alignParentRight="true"
                    android:text="&#45;&#45;M/&#45;&#45;M"
                    android:textSize="10sp"
                    android:visibility="gone"/>-->

                <!--<TextView
                    android:id="@+id/id_iv_item_uploading_netSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/id_iv_item_uploading_pbProgress"
                    android:text="-&#45;&#45;K/s"
                    android:textSize="10sp"
                    android:visibility="gone"/>-->

                <!--<TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/pbProgress"
                    android:text="&#45;&#45;.&#45;&#45;%"
                    android:textSize="10sp"
                    android:visibility="gone" />-->

                <ProgressBar
                    android:id="@+id/id_iv_item_uploading_pbProgress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/id_tv_item_uploading_percent"
                    android:max="100"
                    android:progressDrawable="@drawable/layer_list_progress_drawable"/>

                <TextView
                    android:id="@+id/id_tv_item_uploading_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="已上传100%"
                    android:textSize="12sp"
                    android:textColor="#999999"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/id_tv_item_uploading_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免费"
                android:textColor="#3897f9"/>

            <!--<com.linlic.ccmtv.yx.activity.my.newDownload.NumberProgressBarNew
                android:id="@+id/pbProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:progress_reached_bar_height_new="5.5dp"
                app:progress_reached_color_new="#3498DB"
                app:progress_text_color_new="#3498DB"
                app:progress_text_size_new="10sp"
                app:progress_unreached_bar_height_new="4.75dp"
                app:progress_unreached_color="#CCCCCC"
                app:progress_text_visibility="invisible" />-->
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/id_rl_item_uploading_status"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/id_iv_item_upload_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_upload_upload"/>

            <TextView
                android:id="@+id/id_tv_item_upload_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/id_iv_item_upload_status"
                android:text="重新上传"/>
        </RelativeLayout>

        <Button
            android:id="@+id/id_iv_item_uploading_start"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#E30"
            android:padding="5dp"
            android:text="下载"
            android:textColor="#FFF"
            android:visibility="gone" />

        <Button
            android:id="@+id/remove"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#3E0"
            android:padding="5dp"
            android:text="删除"
            android:textColor="#FFF"
            android:visibility="gone" />



    </LinearLayout>
</LinearLayout>
