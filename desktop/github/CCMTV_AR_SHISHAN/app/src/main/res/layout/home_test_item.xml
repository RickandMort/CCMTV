<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        app:layout_collapseMode="pin"
        app:layout_collapseParallaxMultiplier="0.9"
        >
        <include layout="@layout/home_toptitle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                app:image_scale_type="fit_xy"
                android:layout_height="165dp" />

            <!--<com.linlic.ccmtv.yx.widget.HorizontalListView
                android:layout_width="match_parent"
                android:id="@+id/horizontalListView"
                android:layout_marginTop="145dp"
                android:paddingLeft="30dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@mipmap/horizontallistview_bg"
                android:layout_height="100dp"/>-->

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/id_recyclerview_home_new"
                android:layout_marginTop="145dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@mipmap/horizontallistview_bg"
                android:layout_height="100dp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/medicine_layout"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/medicine_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/medicine_01"
                    />
                <TextView
                    android:id="@+id/medicine_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="内科"
                    android:textColor="#666"
                    />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#EEEEEE"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:id="@+id/surgery_layout"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/surgery_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/surgery_01"
                    />
                <TextView
                    android:id="@+id/surgery_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="外科"
                    android:textColor="#666"
                    />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#EEEEEE"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:id="@+id/children_and_women_layout"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/children_and_women_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/children_and_women_icon02"
                    />
                <TextView
                    android:id="@+id/children_and_women_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="外科"
                    android:textColor="#666"
                    />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#EEEEEE"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:id="@+id/other_layout"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/other_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/children_and_women_icon02"
                    />
                <TextView
                    android:id="@+id/other_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="其他"
                    android:textColor="#666"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F6F6F6"/>
        <ImageView
            android:id="@+id/banner1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:scaleType="fitXY"
            android:src="@mipmap/texticon01"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F6F6F6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/banner2"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/texticon02"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/banner3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@mipmap/texticon03"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:id="@+id/banner4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/texticon04"
                    android:layout_weight="1"
                    android:layout_marginTop="7dp"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F6F6F6"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            >

            <ImageView
                android:id="@+id/banner5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/texticon05"
                android:scaleType="fitXY"
                />
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/banner6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/texticon06"
                android:layout_weight="1"
                android:scaleType="fitXY"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="10dp"
            android:background="#F6F6F6"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐视频"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:textColor="#333"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:id="@+id/newest_hottest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="最新最热"
                android:textColor="#666"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/super_access"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="超级访问"
                android:textColor="#666"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/lecture_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="百家讲坛"
                android:textColor="#666"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/famous_view_of_famous_artists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="名家视角"
                android:textColor="#666"
                android:textSize="18sp"
                />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="#EFEFEF"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <View
                    android:id="@+id/newest_hottest_bg"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="#3194F9"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    />
                <View
                    android:id="@+id/super_access_bg"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="#3194F9"
                    android:visibility="invisible"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    />
                <View
                    android:id="@+id/lecture_room_bg"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="#3194F9"
                    android:visibility="invisible"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    />
                <View
                    android:id="@+id/famous_view_of_famous_artists_bg"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:background="#3194F9"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    />
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>