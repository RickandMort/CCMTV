<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">



            <com.linlic.ccmtv.yx.widget.FocuedTextView
                android:id="@+id/activity_title_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center|left"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="18sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_keywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#989898"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/related_drugs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_weight="3"
                android:gravity="center|right"
                android:onClick="toAbstract">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="5dp"
                    android:text="相关内容"
                    android:textColor="@color/videotree_text_bg2"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/bark4" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/video_expert_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#323232"
                android:layout_marginLeft="10dp"
                android:text="专家讲者 ："
                android:textSize="16sp"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">


            <!--    <TextView
                    android:id="@+id/video_play_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left"
                    android:text="390.9万总播放量"
                    android:textColor="@color/background_menu_divider" />-->

            <!-- <ImageView
                 android:id="@+id/video_header_comment_img"
                 android:layout_width="25dp"
                 android:layout_height="30dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="6dp"
                 android:src="@drawable/video_comm" />-->

            <LinearLayout
                android:id="@+id/video_header_comment_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center"

                >
                <ImageView
                    android:id="@+id/video_header_comment_img"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/video_paly3_03" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#999999"
                    android:text="评论"
                    />

            </LinearLayout>

            <LinearLayout
            android:id="@+id/layout_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_gravity="center"

            >

            <ImageView
                android:id="@+id/video_no_zambia_img"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:src="@mipmap/video_paly3_05" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/zambia_text"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:layout_marginTop="3dp"
                android:text="赞"
                />

        </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_gravity="center"

                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/video_paly3_21" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_votenum"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:layout_marginTop="3dp"
                    android:text="票"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/video_icon_collection_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"

                >
                <ImageView
                    android:id="@+id/video_icon_collection_img"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/video_paly3_07" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:layout_marginTop="3dp"
                    android:text="收藏"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:onClick="ShareVideo"
                android:layout_weight="1"
                android:layout_gravity="center"

                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:onClick="ShareVideo"
                    android:src="@mipmap/video_paly3_09" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:layout_marginTop="3dp"
                    android:text="分享"
                    />

            </LinearLayout>








        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f7f7f7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left"
                    android:text="视频介绍"
                    android:textColor="@color/videotree_text_bg"
                    android:textSize="16sp" />

            </LinearLayout>

            <!--       <com.linlic.ccmtv.yx.utils.HorizontalListView
                       android:id="@+id/horizontallistview1"
                       android:layout_width="wrap_content"
                       android:layout_gravity="center"
                       android:layout_height="120dp" />-->



            <WebView
                android:id="@+id/video_abstract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />


        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f7f7f7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|left"
                    android:text="相关视频"
                    android:textColor="@color/videotree_text_bg"
                    android:textSize="16sp" />

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>


</LinearLayout>