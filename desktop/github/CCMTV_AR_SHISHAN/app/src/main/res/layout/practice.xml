<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/arrow_back"
                    android:layout_width="45dip"
                    android:layout_height="match_parent"
                    android:onClick="back">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="11dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/bark"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|right"
                    android:onClick="departments">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="章节"
                        android:textColor="#3798F9"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/activity_title_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="试题练习"
                    android:textColor="#626262"
                    android:textSize="18sp"/>

            </FrameLayout>

            <include layout="@layout/activity_title4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.linlic.ccmtv.yx.utils.CategoryView
                    android:id="@+id/category2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:orientation="vertical"/>

            </RelativeLayout>

            <ListView
                android:id="@+id/department_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:divider="@null"
                android:listSelector="#00000000"
                android:paddingBottom="55dp"
                android:scrollbars="none"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="65dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/anniu2"
            android:onClick="clickWrong_title"
            android:padding="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/tip_icon01"
                android:text=" 题目报错"
                android:textColor="#999"/>


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@mipmap/button_bg01"
                android:paddingLeft="70dp"
                android:paddingRight="70dp">


                <TextView
                    android:id="@+id/id_tv_practice_look_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="查看答案"
                    android:textColor="#fff"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="#fff"/>

                <LinearLayout
                    android:id="@+id/check_the_answer_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/practice_main_icon12"
                        />

                    <TextView
                        android:id="@+id/count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:text="1/42 "
                        android:textColor="#fff"
                        android:textSize="18sp"/>

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:onClick="switch_questions1"
                android:src="@mipmap/practice_main_icon11"
                />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:onClick="switch_questions"
                android:src="@mipmap/practice_main_icon10"
                />
        </FrameLayout>


        <LinearLayout
            android:id="@+id/transparent_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000"
            android:clickable="true"
            android:orientation="horizontal"
            android:tag="0"
            android:visibility="gone"/>

        <!--透明层 禁止事件下透-->

        <LinearLayout
            android:id="@+id/transparent_layer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/anniu2"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/transparent_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/anniu21"
                android:gravity="center"
                android:padding="10dp"
                android:text="参考答案"
                android:textColor="#333"
                android:textSize="20sp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/transparent_ed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:editable="false"
                        android:gravity="left|top"
                        android:maxLines="15"
                        android:minLines="6"
                        android:padding="5dp"
                        android:textColor="#333"
                        android:visibility="gone"/>

                    <EditText
                        android:id="@+id/transparent_ed2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="left|top"
                        android:maxLines="15"
                        android:minLines="6"
                        android:padding="5dp"
                        android:textColor="#333"/>
                </LinearLayout>

            </ScrollView>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e8e8e8"
                />

            <TextView
                android:id="@+id/transparent_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="clicktransparent_text"
                android:padding="10dp"
                android:text="我知道了"
                android:textColor="#3997F9"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/transparent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transparent_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="取消"
                    android:textColor="#ccc"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="#e8e8e8"/>

                <TextView
                    android:id="@+id/transparent_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="提交"
                    android:textColor="#3997F9"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/complete_testing_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#fff"
            android:orientation="vertical"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/bg_icon03"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/assist_icon04"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    android:onClick="clickComplete_testing"
                    android:src="@mipmap/x_icon01"/>


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="恭喜您 !"
                    android:textColor="#666"
                    android:textSize="24sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="您已完成本轮测试。"
                    android:textColor="#666"
                    android:textSize="18sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/id_tv_practice_restart"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="40dp"
                        android:layout_marginTop="25dp"
                        android:layout_weight="1"
                        android:background="@mipmap/button_icon02"
                        android:gravity="center"
                        android:text="再来一轮"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/id_tv_practice_change_question"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="40dp"
                        android:layout_marginTop="25dp"
                        android:layout_weight="1"
                        android:background="@mipmap/button_icon02"
                        android:gravity="center"
                        android:text="更换题目"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="bottom"
            android:background="#fff"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/anniu14"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="答题正确"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/anniu15"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="答题错误"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/anniu16"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="主观题"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <com.linlic.ccmtv.yx.utils.MyGridView
                android:id="@+id/button_gridview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:horizontalSpacing="0.0dip"
                android:listSelector="@null"
                android:numColumns="6"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="0.0dip"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/practice_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="codezd"
            android:scaleType="fitXY"
            android:src="@mipmap/practice_hint"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>