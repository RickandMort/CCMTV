<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#EFEFEF" />

    <LinearLayout
        android:id="@+id/ll_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="任务类型"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/screen1"
                android:gravity="center"
                android:text="不限"
                android:textColor="#7A7A7A" />

            <TextView
                android:id="@+id/type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/screen1"
                android:gravity="center"
                android:text="文档"
                android:textColor="#7A7A7A" />

            <TextView
                android:id="@+id/type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/screen1"
                android:gravity="center"
                android:text="视频"
                android:textColor="#7A7A7A" />

            <TextView
                android:id="@+id/type4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/screen1"
                android:gravity="center"
                android:text="图文"
                android:textColor="#7A7A7A" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/screen1"
                android:gravity="center"
                android:text="音频"
                android:textColor="#7A7A7A" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#EFEFEF" />

        <TextView
            android:id="@+id/tv_qualified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="是否合格"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_qualified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/qualified1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/screen1"
                android:gravity="center"
                android:text="不限"
                android:textColor="#7A7A7A" />

            <TextView
                android:id="@+id/qualified2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/screen1"
                android:gravity="center"
                android:text="合格"
                android:textColor="#7A7A7A" />

            <TextView
                android:id="@+id/qualified3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/screen1"
                android:gravity="center"
                android:text="不合格"
                android:textColor="#7A7A7A" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#EFEFEF" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/screen_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/screen1"
                android:gravity="center"
                android:text="重置"
                android:textColor="#7A7A7A" />

            <TextView
                android:id="@+id/screen_yes"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/learning_task04"
                android:gravity="center"
                android:text="确定"
                android:textColor="#FFF" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>