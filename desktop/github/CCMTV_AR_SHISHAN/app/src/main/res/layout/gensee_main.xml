<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#fff"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/arrow_back"
        android:layout_width="45dip"
        android:layout_height="match_parent"
        android:onClick="back">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:scaleType="centerInside"
            android:src="@mipmap/bark"/>
    </LinearLayout>


    <TextView
        android:id="@+id/activity_title_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="直播"
        android:textColor="#333333"
        android:textSize="18sp"/>

</FrameLayout>

<include layout="@layout/activity_title4"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/gensee_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gensee_icon01"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="32dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直播专区"
            android:textSize="36sp"
            android:textColor="#ffffff"
            />
        <View
            android:layout_width="48dp"
            android:layout_height="4dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            android:background="#fff"
            />

        <TextView
            android:id="@+id/live_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="观看直播"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:background="@mipmap/gensee_icon02"
            />
        <TextView
            android:id="@+id/i_want_live_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要直播"
            android:textColor="#fff"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@mipmap/gensee_icon02"
            />

    </LinearLayout>



</LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"  >

        <TextView android:id="@+id/version_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/gensee_login"/>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>