<?xml version="1.0" encoding="utf-8"?> <!-- 头部导航  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/activity_title_bg2"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/arrow_back"
        android:layout_width="45dip"
        android:layout_height="match_parent"
        android:onClick="back">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:scaleType="centerInside"
            android:src="@mipmap/bark" />
    </LinearLayout>

    <TextView
        android:id="@+id/activity_title_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="@string/activity_title_name"
        android:textColor="@color/activity_title_name2"
        android:textSize="18sp" />


</LinearLayout>
