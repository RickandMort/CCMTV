<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/arrow_back"
            android:layout_width="45dip"
            android:layout_height="match_parent"
            android:onClick="back">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:scaleType="centerInside"
                android:src="@mipmap/bark" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_title_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我的考试"
            android:textColor="#626262"
            android:textSize="18sp" />


    </FrameLayout>

    <include layout="@layout/activity_title4" />

    <ImageView
        android:id="@+id/direct_broadcast_item_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@mipmap/direct_broadcast_icon13"
        />

    <TextView
        android:id="@+id/brief_introduction_of_live_broadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:text="简介"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingRight="30dp"
        android:onClick="onclick_brief_introduction_of_live_broadcast"
        android:paddingLeft="30dp"
        android:background="@drawable/anniu20"
        />

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabIndicatorColor="#207EDE"
        android:id="@+id/tablayout"/>


    <com.linlic.ccmtv.yx.utils.MyRecyclerView
        android:id="@+id/direct_broadcast_item_myrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.linlic.ccmtv.yx.utils.MyRecyclerView>

</LinearLayout>