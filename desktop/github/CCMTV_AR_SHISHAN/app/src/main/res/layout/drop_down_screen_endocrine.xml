<?xml version="1.0" encoding="utf-8"?><!-- 筛选页 内分泌 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/drop_down_screen_endocrine_max"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/maxText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="内分泌"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drop_down_screen_endocrine_min"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/drop_down_screen_endocrine_min_text1"
                android:tag="内分泌"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="糖尿病"
                android:textColor="@color/drop_down_screen_tumour"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/hr_bg2" />

            <TextView
                android:id="@+id/drop_down_screen_endocrine_min_text2"
                android:tag="内分泌"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="肥胖"
                android:textColor="#707070"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/hr_bg2" />

            <TextView
                android:id="@+id/drop_down_screen_endocrine_min_text3"
                android:tag="内分泌"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="骨质疏松"
                android:textColor="@color/drop_down_screen_tumour"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/hr_bg2" />

            <TextView
                android:id="@+id/drop_down_screen_endocrine_min_text4"
                android:tag="内分泌"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="高血脂"
                android:textColor="#707070"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/drop_down_screen_endocrine_min_text5"
                android:tag="内分泌"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="醛固酮增多"
                android:textColor="#707070"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/hr_bg2" />

            <TextView
                android:id="@+id/drop_down_screen_endocrine_min_text6"
                android:tag="内分泌"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="甲状腺疾病"
                android:textColor="#707070"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/hr_bg2" />

            <TextView
                android:id="@+id/drop_down_screen_endocrine_min_text7"
                android:tag="内分泌"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="垂体瘤"
                android:textColor="#707070"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/hr_bg2" />

            <TextView
                android:id="@+id/drop_down_screen_endocrine_min_text8"
                android:tag="内分泌"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="其他"
                android:textColor="#707070"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>