<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="175dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_height="170dp"  >


    <!-- android:src="@drawable/test1"android:scaleType="centerCrop" -->


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="175dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"
                android:src="@drawable/share1"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_below="@+id/iv_pic"
                style="@style/video_relevant_textview"
                android:textColor="@color/videotree_text_bg"
                />
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_pic_top"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:scaleType="fitXY"
            android:src="@mipmap/free_img_blue"
            android:visibility="gone"/>


    </FrameLayout>
