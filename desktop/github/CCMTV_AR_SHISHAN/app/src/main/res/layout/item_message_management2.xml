<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextView
        android:id="@+id/_item_time"
        android:layout_width="wrap_content"
        android:text="11:11"
        android:layout_gravity="center"
        android:paddingTop="3dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="3dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textColor="#333"
        android:background="@drawable/anniu32"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/_item_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="fitXY"
            android:src="@mipmap/anti_cheating"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/anniu33"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="单位通知"
                    android:textColor="#333"
                    android:textSize="18sp"/>


                <View
                    android:id="@+id/_item_new"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/anniu1"/>

            </LinearLayout>


            <TextView
                android:id="@+id/_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="的说法范德萨发发生阿斯顿发斯蒂芬打发第三方"
                android:textColor="#999"
                android:textSize="16sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#e5e5e5"
                />

            <TextView
                android:id="@+id/_item_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:onClick="message_details"
                android:text="立即查看>>"
                android:textColor="#3997F9"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>