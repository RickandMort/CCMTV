<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/medicine_top_layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <com.linlic.ccmtv.yx.utils.CustomImageView
            android:id="@+id/medicine_head_icon3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default" />

        <RelativeLayout
            android:id="@+id/medicine_title_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/medicine_head_icon3">

            <TextView
                android:id="@+id/medicine_helper3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="小蕊 葛兰素史克 (中国) 慢性乙肝领域 韦瑞德"
                android:textColor="#666"
                android:textSize="13sp" />

            <!--<TextView
                android:id="@+id/medicine_company3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/medicine_helper3"
                android:text="葛兰素史克 (中国) 慢性乙肝领域"
                android:textColor="#666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/medicine_drug3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/medicine_company3"
                android:text="韦瑞德"
                android:textColor="#666"
                android:textSize="13sp" />-->

            <ImageView
                android:id="@+id/medicine_delete3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/medicine_delete"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_img_unread3"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="3dp"
            android:src="@mipmap/ic_kzbf_unread"
            android:visibility="gone" />

        <TextView
            android:id="@+id/medicine_item_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="“肝动”AASLD：慢性乙肝肝炎诊断及治疗热门"
            android:textColor="#333"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_img4"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/img_default" />

    <TextView
        android:id="@+id/tv_medicine_bottom3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="2017年AASLD年会于10月-24日在美国华盛顿召开，本期截取一下慢性乙型肝炎诊疗领域诊治进展"
        android:textColor="#666"
        android:textSize="14sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_posttime3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="2小时前"
            android:textColor="#999"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/medicine_eye_img3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toLeftOf="@+id/medicine_eye_num3"
                android:src="@mipmap/medicine_eye" />

            <TextView
                android:id="@+id/medicine_eye_num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/medicine_zan_img3"
                android:text="321"
                android:textColor="#999"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/medicine_zan_img3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toLeftOf="@+id/medicine_zan_num3"
                android:src="@mipmap/medicine_zan" />

            <TextView
                android:id="@+id/medicine_zan_num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="123"
                android:textColor="#999"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/medicine_eye_img3"
        android:background="#EFEFEF" />

</LinearLayout>
