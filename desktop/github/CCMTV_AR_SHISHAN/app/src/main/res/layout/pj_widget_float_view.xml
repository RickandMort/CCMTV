<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/anniu24"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:visibility="visible"
        android:clickable="true"
        >

        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            />
        <LinearLayout
            android:id="@+id/title_Layout"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="14sp"
                android:singleLine="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:maxLines="1"
                android:textSize="12sp"
                android:text="00:00"
                android:textColor="#fff"
                />

                <TextView
                    android:id="@+id/tv_feedback2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:text="00:00"
                    android:textColor="#fff"
                    />

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/extend"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/float_02"
            />
        <ImageView
            android:id="@+id/close_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="12dp"
            android:src="@mipmap/float_03"
            />
     <!--   <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/pj_menu_account"
            android:padding="4dp"
            android:text="播放"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/pj_menu_fb"
            android:padding="4dp"
            android:text="暂停"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            />-->
    </LinearLayout>

    <FrameLayout
        android:id="@+id/pj_float_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/pj_float_view_icon_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/pj_image_float_logo"
            />

        <ImageView
            android:id="@+id/pj_float_view_icon_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pj_anim_background"
            />
    </FrameLayout>

</FrameLayout>