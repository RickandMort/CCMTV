<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/_item_id"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="15dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <View
                android:layout_width="5dp"
                android:background="#3897F9"
                android:layout_marginRight="10dp"
                android:layout_height="5dp"/>

            <TextView
                android:id="@+id/_item_teaching"
                android:layout_width="wrap_content"
                android:textColor="#333"
                android:text="外院带教（sdfjlas）"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1.5"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/_item_evaluation"
                android:layout_width="wrap_content"
                android:text="未评价"
                android:layout_weight="1"
                android:textColor="#333"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="view_the_score"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/_item_contribution"
                android:layout_width="wrap_content"
                android:text="100%"
                android:layout_weight="1"
                android:textColor="#333"
                android:gravity="center"
                android:drawableRight="@mipmap/study_record_calendar_right"
                android:layout_height="wrap_content" />
        </LinearLayout>

        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7" />


</LinearLayout>