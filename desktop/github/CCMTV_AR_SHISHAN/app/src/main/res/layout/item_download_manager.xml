<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/download_checkbox"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:button="@drawable/upload_down_items_select_new"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingRight="3dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/img_default" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon"
                android:layout_alignRight="@+id/icon"
                android:alpha="0.45"
                android:background="#e0000000">

                <TextView
                    android:id="@+id/item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="45:21"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/download_aid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:maxLines="3"
                android:text="应用名字"
                android:textColor="#000"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/downloadSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/pbProgress"
                    android:layout_alignParentRight="true"
                    android:text="--M/--M"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/netSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/pbProgress"
                    android:text="---K/s"
                    android:textSize="10sp"
                    android:visibility="visible" />

                <!--<TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/pbProgress"
                    android:text="&#45;&#45;.&#45;&#45;%"
                    android:textSize="10sp"
                    android:visibility="gone" />-->

                <ProgressBar
                    android:id="@+id/pbProgress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:max="100"
                    android:progressDrawable="@drawable/layer_list_progress_drawable" />

            </RelativeLayout>

            <!--<com.linlic.ccmtv.yx.activity.my.newDownload.NumberProgressBarNew
                android:id="@+id/pbProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:progress_reached_bar_height_new="5.5dp"
                app:progress_reached_color_new="#3498DB"
                app:progress_text_color_new="#3498DB"
                app:progress_text_size_new="10sp"
                app:progress_unreached_bar_height_new="4.75dp"
                app:progress_unreached_color="#CCCCCC"
                app:progress_text_visibility="invisible" />-->
        </RelativeLayout>

        <Button
            android:id="@+id/start"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#E30"
            android:padding="5dp"
            android:text="下载"
            android:textColor="#FFF"
            android:visibility="gone" />

        <Button
            android:id="@+id/remove"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#3E0"
            android:padding="5dp"
            android:text="删除"
            android:textColor="#FFF"
            android:visibility="gone" />

        <Button
            android:id="@+id/restart"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#03E"
            android:padding="5dp"
            android:text="重新\n下载"
            android:textColor="#FFF"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>
