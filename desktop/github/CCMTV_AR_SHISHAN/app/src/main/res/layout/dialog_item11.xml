<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--透明层 禁止事件下透-->

        <LinearLayout
            android:id="@+id/transparent_layer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/_item_content"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="学员详细"
                android:textColor="#4492DA"
                android:textSize="18sp" />




            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#E2E2E2"
                />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:layout_marginBottom="30dp"
                 android:padding="15dp"
                 android:layout_height="wrap_content">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                     android:layout_marginTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_weight="1"
                         android:text="姓名："
                         android:textColor="#999"
                         android:gravity="center|right"
                         android:layout_height="wrap_content" />

                     <TextView
                         android:id="@+id/_dialog_name"
                         android:layout_width="match_parent"
                         android:layout_weight="1"
                         android:paddingLeft="10dp"
                         android:text="赵广西"
                         android:layout_height="wrap_content" />

                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                     android:layout_marginTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_weight="1"
                         android:text="学历："
                         android:gravity="center|right"
                         android:textColor="#999"
                         android:layout_height="wrap_content" />

                     <TextView
                         android:id="@+id/_dialog_educational_background"
                         android:layout_width="match_parent"
                         android:layout_weight="1"
                         android:paddingLeft="10dp"
                         android:text="博士"
                         android:layout_height="wrap_content" />

                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                     android:layout_marginTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_weight="1"
                         android:text="执业医师证："
                         android:gravity="center|right"
                         android:textColor="#999"
                         android:layout_height="wrap_content" />

                     <TextView
                         android:id="@+id/_dialog_certificate_of_medical_practitioner"
                         android:layout_width="match_parent"
                         android:layout_weight="1"
                         android:text="无"
                         android:paddingLeft="10dp"
                         android:layout_height="wrap_content" />

                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                     android:layout_marginTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_weight="1"
                         android:text="所属科室："
                         android:gravity="center|right"
                         android:textColor="#999"
                         android:layout_height="wrap_content" />

                     <TextView
                         android:id="@+id/_dialog_subordinate_departments"
                         android:layout_width="match_parent"
                         android:layout_weight="1"
                         android:paddingLeft="10dp"
                         android:text="心电图"
                         android:layout_height="wrap_content" />

                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                     android:layout_marginTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_weight="1"
                         android:text="带教开始时间："
                         android:gravity="center|right"
                         android:textColor="#999"
                         android:layout_height="wrap_content" />

                     <TextView
                         android:id="@+id/_dialog_start_time"
                         android:layout_width="match_parent"
                         android:layout_weight="1"
                         android:paddingLeft="10dp"
                         android:text="2018-06-01"
                         android:layout_height="wrap_content" />

                 </LinearLayout>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:orientation="horizontal"
                     android:layout_marginTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_weight="1"
                         android:text="带教结束时间："
                         android:gravity="center|right"
                         android:textColor="#999"
                         android:layout_height="wrap_content" />

                     <TextView
                         android:layout_width="match_parent"
                         android:paddingLeft="10dp"
                         android:id="@+id/_dialog_end_time"
                         android:layout_weight="1"
                         android:text="2018-06-01"
                         android:layout_height="wrap_content" />

                 </LinearLayout>



             </LinearLayout>


        </LinearLayout>

    </FrameLayout>


</LinearLayout>