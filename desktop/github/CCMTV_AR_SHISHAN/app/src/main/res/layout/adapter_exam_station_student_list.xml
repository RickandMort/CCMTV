<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <com.linlic.ccmtv.yx.utils.CircleImageView
                android:id="@+id/iv_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/img_default2"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="12dp">

                <TextView
                    android:id="@+id/tv_realname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小蕊"
                    android:textSize="14sp"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/tv_lun_keshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="轮转科室：全科医学科"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_score"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:background="@mipmap/station_nofen"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:id="@+id/iv_paint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/station_paint"/>

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打分"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>



    </RelativeLayout>


</LinearLayout>
