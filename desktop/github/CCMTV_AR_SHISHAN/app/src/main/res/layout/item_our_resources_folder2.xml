<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:autoWrapLineLayout="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/id_iv_our_resources_folder"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/our_resources_folder"/>

        <TextView
            android:id="@+id/id_tv_our_resources_folder"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:minLines="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxLines="2"
            android:lineSpacingMultiplier="1.2"
            android:ellipsize="end"
            android:gravity="top"
            android:text="文件夹标题文件夹标题文件夹标题文件夹标题文件夹标题文件夹标题文件夹标题"
            android:textSize="16sp"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/keyword_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:text="关键字:"
            />
    </LinearLayout>
    
    <TextView
        android:id="@+id/item_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#999"
        android:layout_marginBottom="15dp"
        android:text="2019-05-02"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#e1e1e1"
        />

</LinearLayout>