<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- This is the main color -->

<!-- 给View的上 下  右设置8dp的边框 -->
<!-- http://blog.csdn.net/lowprofile_coding/article/details/47848245-->

<item android:top="0.5dp" android:left="0.5dp" android:right="0.5dp" >
    <shape>
        <!--     View填充颜色 -->
        <solid android:color="#ffffff" />
        <corners android:topRightRadius="3dp"  android:topLeftRadius="3dp"  />
        <stroke
            android:width="0.5dp"
            android:color="#d1d1d1"/>
    </shape>
</item>

</layer-list>

