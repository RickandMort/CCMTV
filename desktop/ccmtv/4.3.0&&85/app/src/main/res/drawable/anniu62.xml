<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 填充的颜色 -->
    <solid android:color="#D9EDF7" />

    <!-- 定义边框的颜色 -->
    <stroke
        android:dashGap="0dp"
        android:dashWidth="2dp"
        android:width="0.1dp"
        android:color="#BCE8F1" />
    
     <!-- 设置矩形的四个角为弧形 -->
    <corners android:radius="10dp" />

</shape>
