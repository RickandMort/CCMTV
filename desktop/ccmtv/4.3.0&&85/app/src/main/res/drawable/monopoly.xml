<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- outer circle -->
    <item>
        <shape android:shape="oval" >
            <solid android:color="#8ec0e8" />
        </shape>
    </item>

    <!-- inner shadow of outer circle -->

    <!-- center circle -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#8ec0e8"/>
            <gradient
                android:angle="270"
                android:endColor="#1e81d2"
                android:startColor="#1e81d2" />
        </shape>
    </item>

</layer-list>