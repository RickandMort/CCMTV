<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cid_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:id="@+id/is_show"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/video_image_small"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@mipmap/img_default" />

        <ImageView
            android:id="@+id/video_image"
            android:layout_width="100dp"
            android:layout_height="68dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/task_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp" />

            <TextView
                android:id="@+id/task_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="未开始"
                android:textSize="14sp"
                android:textColor="#69ADFA"/>

            <TextView
                android:id="@+id/task_status_image"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="去完成"
                android:background="@mipmap/learning_task04"
                android:textSize="14sp"
                android:textColor="#FFF"/>

        </RelativeLayout>
    </LinearLayout>

    <View  android:layout_height="5px"
        android:background="#EFEFEF"
        android:layout_width="match_parent" />

    <!-- 存放aid -->
    <TextView
        android:id="@+id/task_aid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- 存放id -->
    <TextView
        android:id="@+id/task_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>