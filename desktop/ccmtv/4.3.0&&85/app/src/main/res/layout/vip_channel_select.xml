<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F5F5F5"
        android:orientation="horizontal" >`

        <LinearLayout
            android:id="@+id/arrow_back"
            android:layout_width="45dip"
            android:layout_gravity="right"
            android:onClick="close_upload"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:scaleType="centerInside"
                android:src="@mipmap/conference_issue_selece_close" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_title_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="全部科室"
            android:textSize="18sp" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <com.linlic.ccmtv.yx.utils.MyGridView
                android:id="@+id/videos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:horizontalSpacing="5dp"
                android:listSelector="@null"
                android:numColumns="4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#efefef"
                />
            <com.linlic.ccmtv.yx.utils.MyGridView
                android:id="@+id/videos2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:horizontalSpacing="5dp"
                android:listSelector="@null"
                android:numColumns="4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#efefef"
                />
            <com.linlic.ccmtv.yx.utils.MyGridView
                android:id="@+id/videos3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:horizontalSpacing="5dp"
                android:listSelector="@null"
                android:numColumns="4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#efefef"
                />
            <com.linlic.ccmtv.yx.utils.MyGridView
                android:id="@+id/videos4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:horizontalSpacing="5dp"
                android:listSelector="@null"
                android:numColumns="4" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>