<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--透明层 禁止事件下透-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="370dp">

        <LinearLayout
            android:background="@drawable/anniu64"
            android:id="@+id/transparent_layer1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:textSize="16sp"
                android:textColor="#333"
                android:text="  您的考试成绩如下：" />

            <ListView
                android:id="@+id/examination_instructions_list2"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:divider="@null"
                android:listSelector="#00000000"
                android:paddingBottom="0dp"
                android:scrollbars="none" />




        </LinearLayout>

        <Button
            android:id="@+id/i_understand"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/button_01"
            android:onClick="enter_the_examination"
            android:text="我知道了"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </FrameLayout>


</LinearLayout>