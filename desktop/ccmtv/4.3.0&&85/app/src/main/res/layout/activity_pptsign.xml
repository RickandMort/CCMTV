<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.linlic.ccmtv.yx.activity.my.learning_task.PPTSignActivity">

    <include layout="@layout/activity_title7" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#EFEFEF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@mipmap/learning_task02"
            />

        <TextView
            android:id="@+id/ppt_sign_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textSize="18dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#EFEFEF" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ppt_sign_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center|top"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@mipmap/img_default" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="任务时间："
                        android:textColor="@color/recent_browse_file_list_item_title"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ppt_sign_starttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017-10-13 14:00"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/ppt_sign_endtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10-13 14:00"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/btn_yuan_shape"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:paddingLeft="5dp"
                        android:text="类型："
                        android:textColor="@color/darkerorange"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:paddingRight="5dp"
                        android:text="PPT"
                        android:textColor="@color/darkerorange"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#EFEFEF"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#F2F9FF"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="#666"
            android:text="当前页："
            />
        <TextView
            android:id="@+id/ppt_pageNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#666"
            android:text=""
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#666"
            android:textSize="13sp"
            android:text="跳转到"
            />

        <EditText
            android:id="@+id/ppt_sign_pageNum"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/learning_task09"
            android:numeric="integer"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#787878"
            android:textSize="16sp"  />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="#666"
            android:text="页"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="共"
            android:textColor="#787878"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ppt_total_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="#666"
            android:text="10"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="页"
            android:textSize="13sp"
            android:textColor="#787878" />


    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/id_lv_ppt_sign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp"
            android:layout_marginTop="35dp"
            android:listSelector="@color/transparent"
            android:paddingTop="6dp"
            android:dividerHeight="6dp"
            android:divider="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="5dp"
            android:background="@drawable/anniu29"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/learning_task10" />


            <com.linlic.ccmtv.yx.activity.my.learning_task.TimerTextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:textColor="#fff"
                android:text=""
                android:textSize="14sp" />

            <TextView
                android:id="@+id/time_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:textColor="#fff"
                android:visibility="gone"
                android:text=""
                android:textSize="14sp" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#EFEFEF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:id="@+id/ll_s1"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:paddingLeft="6dp"
                    android:background="@mipmap/video_sign2"
                    android:gravity="center"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sign_t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="签到"
                        android:textColor="#6c6c6c"/>

                    <TextView
                        android:id="@+id/sign_t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="（"
                        android:textColor="#6c6c6c"/>

                    <TextView
                        android:id="@+id/video_s3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#6c6c6c"/>

                    <TextView
                        android:id="@+id/sign_t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textColor="#6c6c6c"/>

                    <TextView
                        android:id="@+id/video_s1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="#6c6c6c"/>

                    <TextView
                        android:id="@+id/sign_t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="）"
                        android:textColor="#6c6c6c"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/video_sign_i1"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:background="@mipmap/video_sign2"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="进入测试"
                        android:textColor="#6c6c6c"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>










    <!-- 保存ppt_time -->
    <TextView
        android:id="@+id/ppt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>
