<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/medicine_top_layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <com.linlic.ccmtv.yx.utils.CustomImageView
            android:id="@+id/medicine_head_icon_participate"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@mipmap/img_default" />

        <RelativeLayout
            android:id="@+id/medicine_title_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/medicine_head_icon_participate">

            <TextView
                android:id="@+id/medicine_helper_participate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="13sp"
                android:text="小蕊 葛兰素史克 (中国) 慢性乙肝领域 韦瑞德"
                android:textColor="#666" />

            <ImageView
                android:id="@+id/medicine_delete_participate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/medicine_delete"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/button"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img_unread_participate"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginRight="3dp"
                android:src="@mipmap/ic_kzbf_unread"
                android:visibility="gone" />

            <TextView
                android:id="@+id/medicine_item_title_participate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:lineSpacingMultiplier="1.2"
                android:text="“肝动”AASLD：慢性乙肝肝炎诊断及治疗热门"
                android:textColor="#333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_participate_point"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center_horizontal"
                android:textColor="@color/integral_description"
                android:textSize="14sp"
                android:visibility="visible" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@id/title"
            android:layout_toLeftOf="@+id/button">

            <TextView
                android:id="@+id/tv_posttime_participate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:text="2小时前"
                android:textColor="#999"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv_posttime_participate"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/medicine_eye_img_participate"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom"
                    android:src="@mipmap/medicine_eye" />

                <TextView
                    android:id="@+id/medicine_eye_num_participate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dp"
                    android:text="321"
                    android:textColor="#999"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/medicine_zan_img_participate"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom"
                    android:src="@mipmap/medicine_zan" />

                <TextView
                    android:id="@+id/medicine_zan_num_participate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:text="123"
                    android:textColor="#999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/btn_participate"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:background="@mipmap/button_01"
                    android:gravity="center"
                    android:text="已参与"
                    android:textColor="@color/color_white"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/medicine_eye_img2"
        android:background="#EFEFEF" />

</LinearLayout><!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="wrap_content"--><!--android:layout_height="wrap_content"--><!--android:padding="10dp">-->

