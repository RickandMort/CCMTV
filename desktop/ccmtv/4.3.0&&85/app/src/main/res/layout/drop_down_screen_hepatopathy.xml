<?xml version="1.0" encoding="utf-8"?><!-- 筛选页 肝病 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/drop_down_screen_hepatopathy_max"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/maxText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="肝病"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drop_down_screen_hepatopathy_min"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/drop_down_screen_hepatopathy_min_text1"
                android:tag="肝病"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="肝癌"
                android:textColor="@color/drop_down_screen_tumour"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/hr_bg2" />

            <TextView
                android:id="@+id/drop_down_screen_hepatopathy_min_text2"
                android:tag="肝病"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="肝硬化"
                android:textColor="#707070"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/hr_bg2" />

            <TextView
                android:id="@+id/drop_down_screen_hepatopathy_min_text3"
                android:tag="肝病"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="肝血管瘤"
                android:textColor="@color/drop_down_screen_tumour"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/hr_bg2" />

            <TextView
                android:id="@+id/drop_down_screen_hepatopathy_min_text4"
                android:tag="肝病"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="药物性肝损"
                android:textColor="#707070"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/drop_down_screen_hepatopathy_min_text5"
                android:tag="肝病"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="甲肝"
                android:textColor="#707070"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/hr_bg2" />

            <TextView
                android:id="@+id/drop_down_screen_hepatopathy_min_text6"
                android:tag="肝病"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="乙肝"
                android:textColor="#707070"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/hr_bg2" />

            <TextView
                android:id="@+id/drop_down_screen_hepatopathy_min_text7"
                android:tag="肝病"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="丙肝"
                android:textColor="#707070"
                android:textSize="15dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/hr_bg2" />

            <TextView
                android:id="@+id/drop_down_screen_hepatopathy_min_text8"
                android:tag="肝病"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="其他病毒性肝炎"
                android:textColor="#707070"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/drop_down_screen_hepatopathy_min_text9"
                android:tag="肝病"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="其他肝病"
                android:textColor="#707070"
                android:textSize="15dp" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>