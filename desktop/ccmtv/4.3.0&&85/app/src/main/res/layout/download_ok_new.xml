<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/recent_browse_file_title_bg">

        <include
            android:id="@+id/download_topInclude"
            layout="@layout/activity_title7" />

        <TextView
            android:id="@+id/download_topRightTxt"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="center"
            android:onClick="selectDelete"
            android:paddingRight="7dp"
            android:text="编辑"
            android:textColor="#3A95FA"
            android:textSize="16sp"
            android:visibility="visible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC" />

    <!--
    <View
        android:id="@+id/download_topview"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC" />
    -->

    <include layout="@layout/layout_nodata" />

    <LinearLayout
        android:id="@+id/ll_caching"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/blue_dot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="正在缓存"
                android:textColor="#666" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_caching"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/upload_down_item_select"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:button="@drawable/upload_down_items_select_new"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingRight="3dp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/upload_down_item_img"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/upload_down_item_img"
                    android:layout_alignRight="@+id/upload_down_item_img"
                    android:alpha="0.15"
                    android:background="#e0000000"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="45:21"
                    android:textColor="#FFF"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:alpha="0.25"
                    android:background="#e0000000">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/downloding_bg"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="19dp"
                        android:text="0"
                        android:textColor="#FFF"/>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/down_item_group_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="name"
                    android:textColor="#666" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/upload_down_item_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/download_progress"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5dp"
                        android:text="1M/100M"
                        android:textColor="#d2c9c9"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/download_prog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/download_progress"
                        android:layout_marginBottom="5dp"
                        android:text="已缓存80%"
                        android:textColor="#3A95FA"
                        android:textSize="13sp" />

                    <ProgressBar
                        android:id="@+id/download_progress"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_alignParentBottom="true"
                        android:max="100"
                        android:progressDrawable="@drawable/layer_list_progress_drawable" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/upload_down_item_videoid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/upload_down_item_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ok"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cached"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/blue_dot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="已缓存"
            android:textColor="#666" />

    </LinearLayout>

    <ListView
        android:id="@+id/download_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DCDCDC" />

    <include layout="@layout/memory" />

    <LinearLayout
        android:id="@+id/download_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/selectAllCheck"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="selectAllCheck"
            android:text="全选"
            android:textColor="@color/activity_title_name" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DCDCDC" />

        <TextView
            android:id="@+id/delete_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="deleteVideo"
            android:text="删除"
            android:textColor="@color/activity_title_name" />
    </LinearLayout>
</LinearLayout>