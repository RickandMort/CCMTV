<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/clinical_exercise_icon05"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@mipmap/clinical_exercise_icon06"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999"
                android:text="2017年12月12日"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/main_text_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2335"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="#666" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/main_text_step"
                    android:text="步"
                    android:layout_alignBottom="@+id/main_text_step"
                    android:textColor="#666"
                    android:paddingLeft="5dp"
                    android:paddingBottom="8dp"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消耗了2600卡路里"
                android:textColor="#999"
                android:paddingBottom="8dp"
                />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>