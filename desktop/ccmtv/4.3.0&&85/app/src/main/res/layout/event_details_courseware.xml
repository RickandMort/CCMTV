<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#ffffff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/arrow_back"
            android:layout_width="45dip"
            android:layout_height="match_parent"
            android:onClick="back">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:scaleType="centerInside"
                android:src="@mipmap/bark"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/openFileMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:onClick="openFileMenu">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="选择文件"
                android:textColor="@color/activity_login"
                android:textSize="13sp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/activity_title_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="课件"
            android:textColor="#626262"
            android:textSize="16sp"/>

    </FrameLayout>

    <include layout="@layout/activity_title4" />



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/data_layout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="left|center"
                android:layout_gravity="center"
                android:paddingLeft="18dp"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#eb4f38"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:hint="备注：文件格式PDF/PPT/DOC/图片"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1" />
            </LinearLayout>

            <GridView
                android:id="@+id/courseware"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="1"
                android:paddingLeft="20dp"
                android:scrollbars="none"
                android:paddingRight="20dp"
                android:paddingTop="15dp"  />

        </LinearLayout>

        <com.linlic.ccmtv.yx.widget.NodataEmptyLayout
            android:id="@+id/tranining2_nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            app:empty_des="还没有任何课件~"
            android:visibility="gone"
            app:text_color="#4492da"
            app:empty_src="@mipmap/nodata_empty1"
            app:empty_topLine="false"/>

    </FrameLayout>



</LinearLayout>