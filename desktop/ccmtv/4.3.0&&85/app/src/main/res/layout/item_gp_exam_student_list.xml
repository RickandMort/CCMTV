<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
              android:padding="10dp"
    android:gravity="center">


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_tv_gp_exam_student_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/id_tv_gp_exam_student_list_item_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textSize="10sp"
            android:background="@drawable/anniu36"
            android:text="心血管"
            android:textColor="#F79801"/>

    </LinearLayout>


    <TextView
        android:id="@+id/id_tv_gp_exam_student_list_item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="16sp"
        android:textColor="#666"/>

    <TextView
        android:id="@+id/id_tv_gp_exam_student_list_item_score2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:visibility="gone"
        android:textSize="13sp"
        android:text="分"
        android:textColor="#4391d4"
        />



</LinearLayout>