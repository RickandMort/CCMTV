<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/download_topInclude"
            layout="@layout/activity_title" />

        <ImageView
            android:id="@+id/download_topRightImg"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:onClick="selectDelete"
            android:paddingRight="7dp"
            android:src="@drawable/delete_top_right_img_selecter"
            android:visibility="visible" />
    </RelativeLayout>

    <include layout="@layout/layout_nodata" />

    <ListView
        android:id="@+id/download_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/download_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selectAllCheck"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:onClick="selectAllCheck"
                android:text="全选"
                android:textColor="@color/activity_title_name" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#DCDCDC" />

            <TextView
                android:id="@+id/delete_video"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:onClick="deleteVideo"
                android:text="删除"
                android:textColor="@color/activity_title_view" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>