<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:id="@+id/medical_congress_page_top_img"
            android:src="@mipmap/ys" />


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/hr_bg2" />


        <!--预告 -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23px"
            android:layout_marginLeft="22px"
            android:layout_marginRight="20px"
            android:layout_marginTop="26px"
            android:orientation="horizontal">

            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:background="#4392d9" />

            <TextView
                style="@style/home_buttom_title"
                android:text="@string/medical_title"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
</LinearLayout>