<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/arrow_back"
            android:layout_width="45dip"
            android:layout_height="match_parent"
            android:onClick="back">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:scaleType="centerInside"
                android:src="@mipmap/bark"/>
        </LinearLayout>

        <TextView
            android:id="@+id/activity_title_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="设置中心"
            android:textColor="#626262"
            android:textSize="18sp"/>


    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/my_Personal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:background="#FFF"
                    android:gravity="center|left"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/style_tv_setting"
                        android:text="修改资料"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou_right_gray"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#e4e4e4"/>

                <LinearLayout
                    android:id="@+id/my_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:background="#FFF"
                    android:gravity="center|left"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/style_tv_setting"
                        android:text="手机号"/>

                    <TextView
                        android:id="@+id/id_tv_mysetting_phonenumber"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:textColor="#A5A5A5"/>

                    <!--<View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />-->

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou_right_gray"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#e4e4e4"/>

                <LinearLayout
                    android:id="@+id/my_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:background="#FFF"
                    android:gravity="center|left"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/style_tv_setting"
                        android:text="修改密码"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou_right_gray"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#e4e4e4"/>

                <LinearLayout
                    android:id="@+id/my_bofanganddown"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:background="#FFF"
                    android:gravity="center|left"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/style_tv_setting"
                        android:text="@string/bofanganddown"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou_right_gray"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#e4e4e4"/>

                <!--消息通知模块，涉及到极光推送，暂时先隐藏-->
                <LinearLayout
                    android:id="@+id/layou_setpush"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:background="#FFF"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        style="@style/style_tv_setting"
                        android:text="@string/setpush"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/iv_openpush"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:padding="3dp"
                        android:src="@drawable/select_setpush_new"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#e4e4e4"/>


                <LinearLayout
                    android:id="@+id/my_arassert"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:background="#FFF"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        style="@style/style_tv_setting"
                        android:text="@string/arassert"/>

                    <TextView
                        android:id="@+id/tv_arcache"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:textColor="#A5A5A5"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou_right_gray"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#e4e4e4"
                    android:visibility="visible"/>

                <LinearLayout
                    android:id="@+id/layout_clearcache"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/style_tv_setting"
                        android:text="@string/clearcache"/>

                    <TextView
                        android:id="@+id/tv_cache"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:textColor="#A5A5A5"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou_right_gray"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#e4e4e4"/>

                <LinearLayout
                    android:id="@+id/layout_checknew"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_tv_setting"
                        android:text="@string/checknew"/>

                    <TextView
                        android:id="@+id/tv_showversion"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:paddingRight="10dp"
                        android:textColor="#A5A5A5"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou_right_gray"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#e4e4e4"/>

                <LinearLayout
                    android:id="@+id/layout_aboutown"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/style_tv_setting"
                        android:text="@string/about_own"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou_right_gray"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#e4e4e4"/>

                <LinearLayout
                    android:id="@+id/layout_callkefu"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_tv_setting"
                        android:text="@string/call_custom"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou_right_gray"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#e4e4e4"/>

                <LinearLayout
                    android:id="@+id/layout_yjfk"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/style_tv_setting"
                        android:text="@string/feedback"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/jiantou_right_gray"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#e4e4e4"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:onClick="quit_login">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#54A3F4"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="#FFF"
            android:textSize="17sp"/>
    </LinearLayout>
</LinearLayout>