<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/recent_browse_file_title_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <include layout="@layout/activity_title" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_layout"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="22dp"
                    android:text="感谢您的视频"
                    android:textSize="28sp" />
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@+id/layout_title"
                android:background="@color/bg_edittext_focused" />

            <RelativeLayout
                android:id="@+id/rel_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2">

                <TextView
                    android:id="@+id/tv_sendpeo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:padding="8dp"
                    android:text="发件人:"
                    android:textColor="@color/tv_gray" />

                <TextView
                    android:id="@+id/tv_sendpeo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_sendpeo"
                    android:padding="8dp"
                    android:text="李超峰"
                    android:textColor="@color/tv_gray" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_below="@+id/tv_sendpeo_name"
                    android:background="#e4e4e4" />

                <TextView
                    android:id="@+id/tv_getpeo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_sendpeo"
                    android:layout_marginLeft="20dp"
                    android:padding="8dp"
                    android:text="收件人:"
                    android:textColor="@color/tv_gray" />

                <TextView
                    android:id="@+id/tv_getpeo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_sendpeo_name"
                    android:layout_toRightOf="@+id/tv_getpeo"
                    android:padding="8dp"
                    android:text="ccocococo:"
                    android:textColor="@color/tv_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_below="@+id/tv_getpeo_name"
                    android:background="#e4e4e4" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_getpeo"
                    android:layout_marginLeft="20dp"
                    android:padding="8dp"
                    android:text="时    间:"
                    android:textColor="@color/tv_gray" />

                <TextView
                    android:id="@+id/tv_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_getpeo_name"
                    android:layout_toRightOf="@+id/tv_time"
                    android:padding="8dp"
                    android:text="12-12:"
                    android:textColor="@color/tv_gray" />


            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rel_info"
                android:background="@color/bg_edittext_focused" />


            <WebView
                android:id="@+id/webView"
                android:layout_below="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp" />

        </LinearLayout>
    </ScrollView>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#F8F8F8">

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/anniu2"
            android:padding="8dp"
            android:text="删除" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/btn_sendmess"
            android:padding="8dp"
            android:text="回复"
            android:textColor="#FFF" />
    </RelativeLayout>

</RelativeLayout>