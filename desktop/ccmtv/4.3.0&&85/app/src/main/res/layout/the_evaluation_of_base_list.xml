<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/arrow_back"
            android:layout_width="45dip"
            android:layout_height="match_parent"
            android:onClick="back">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:scaleType="centerInside"
                android:src="@mipmap/bark" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_title_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="#333"
            android:textSize="18sp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="15dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sub_left"
                android:layout_width="wrap_content"
                android:textColor="#333"
                android:text=""
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1.5"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="分数"
                android:layout_weight="1"
                android:textColor="#333"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_sub_right"
                android:layout_width="wrap_content"
                android:text="操作"
                android:layout_weight="1"
                android:textColor="#333"
                android:gravity="right"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f7f7f7" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.linlic.ccmtv.yx.widget.NodataEmptyLayout
            android:id="@+id/lt_nodata1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:visibility="gone"
            app:empty_des="当前还没有数据哦~"
            app:empty_src="@mipmap/nodata_empty"
            app:empty_topLine="false" />

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>

    </FrameLayout>


</LinearLayout>