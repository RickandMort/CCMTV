<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/id_ll_periodical_exam_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@mipmap/pingjia_top"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总得分"
                android:textColor="#3897F9"
                android:textSize="13sp"
                android:background="@mipmap/total_score"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="24dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                >
                <EditText
                    android:id="@+id/id_tv_periodical_exam_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="75"
                    android:textColor="#3897F9"
                    android:textSize="36sp"
                    android:layout_marginBottom="20dp"
                    android:background="@null"
                    android:inputType="number"
                    android:enabled="false"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textColor="#3897F9"
                    android:textSize="20sp"
                    android:layout_marginBottom="20dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满分100分，80分以下为差评"
                android:textColor="@color/black66"
                android:textSize="11sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/id_ll_periodical_exam_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E1E1E1"/>

            <LinearLayout
                android:id="@+id/id_ll_periodical_exam_stu_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓        名:"
                    android:textColor="#999"/>

                <TextView
                    android:id="@+id/id_tv_periodical_exam_stu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=""/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E1E1E1"/>

            <LinearLayout
                android:id="@+id/id_ll_periodical_exam_base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基        地:"
                    android:textColor="#999"/>

                <TextView
                    android:id="@+id/id_tv_periodical_exam_base"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E1E1E1"/>

            <LinearLayout
                android:id="@+id/id_ll_periodical_exam_template"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="选择表单:"
                    android:textColor="#999"/>

                <!--<org.angmarch.views.NiceSpinner
                    android:id="@+id/id_spinner_graduate_exam_template"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    >

                    <LinearLayout
                        android:id="@+id/ll_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/anniu10"
                        android:orientation="vertical"
                        >

                        <RelativeLayout
                            android:id="@+id/rl_item_grade"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:padding="2dp">

                            <TextView
                                android:id="@+id/tv_value_form"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:background="#fff"
                                android:ellipsize="end"
                                android:gravity="left|center"
                                android:hint="0"
                                android:paddingLeft="10dp"
                                android:singleLine="true"
                                android:textColor="#ff000000">
                            </TextView>

                            <LinearLayout
                                android:id="@+id/bt_dropdown_form"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@+id/tv_value_form"
                                android:background="#fff"
                                android:gravity="center"
                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/down_icon"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E1E1E1"/>

            <LinearLayout
                android:id="@+id/id_ll_periodical_exam_input_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="录入方式:"
                    android:textColor="#999"/>

                <TextView
                    android:id="@+id/id_tv_periodical_exam_input_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E1E1E1"/>

            <LinearLayout
                android:id="@+id/id_ll_periodical_exam_score_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评分表:"
                    android:textColor="#999"/>

                <TextView
                    android:id="@+id/id_tv_periodical_exam_score_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E1E1E1"/>

            <LinearLayout
                android:id="@+id/id_ll_periodical_exam_input_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="打        分:"
                    android:textColor="#999"/>

                <EditText
                    android:id="@+id/id_et_periodical_exam_input_score"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="请输入分数"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E1E1E1"/>

        <LinearLayout
            android:id="@+id/ll_score_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打分方式:"
                android:textColor="#999"/>

            <TextView
                android:id="@+id/score_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E1E1E1"/>

        <LinearLayout
            android:id="@+id/id_ll_periodical_exam_upload_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="上传图片"/>

            <com.linlic.ccmtv.yx.widget.MyGridView
                android:id="@+id/id_gv_periodical_exam_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent2"
                android:horizontalSpacing="5dp"
                android:listSelector="@color/transparent2"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp"/>

            <ImageView
                android:id="@+id/id_iv_periodical_exam_add_pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:onClick="addExamPic"
                android:layout_marginTop="10dp"
                android:src="@mipmap/upload_addpic"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>