<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--透明层 禁止事件下透-->

        <LinearLayout
            android:id="@+id/transparent_layer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/_item_content"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="科室信息"
                android:textColor="#4492DA"
                android:textSize="18sp" />




            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#E2E2E2"
                />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:layout_marginBottom="10dp"
                 android:padding="15dp"
                 android:layout_height="wrap_content">

                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:paddingRight="15dp"
                     android:paddingLeft="15dp"
                     android:paddingTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:text="姓名："
                         android:layout_weight="1.4"
                         android:textColor="#999"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />
                     <TextView
                         android:id="@+id/_item_name"
                         android:text="公示语"
                         android:layout_weight="1"
                         android:textColor="#333"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />

                 </LinearLayout>
                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:paddingRight="15dp"
                     android:paddingLeft="15dp"
                     android:paddingTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:text="手机号码："
                         android:layout_weight="1.4"
                         android:textColor="#999"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />
                     <TextView
                         android:id="@+id/_item_phone"
                         android:text="公示语"
                         android:layout_weight="1"
                         android:textColor="#333"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />

                 </LinearLayout>
                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:paddingRight="15dp"
                     android:paddingLeft="15dp"
                     android:paddingTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:text="学历："
                         android:layout_weight="1.4"
                         android:textColor="#999"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />
                     <TextView
                         android:id="@+id/_item_recor_of_formal_schooling"
                         android:text="公示语"
                         android:layout_weight="1"
                         android:textColor="#333"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />

                 </LinearLayout>
                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:paddingRight="15dp"
                     android:paddingLeft="15dp"
                     android:paddingTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:text="执业医师证："
                         android:layout_weight="1.4"
                         android:textColor="#999"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />
                     <TextView
                         android:id="@+id/_item_certificate_of_medical_practitioner"
                         android:text="公示语"
                         android:layout_weight="1"
                         android:textColor="#333"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />

                 </LinearLayout>
                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:paddingRight="15dp"
                     android:paddingLeft="15dp"
                     android:paddingTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:text="入培时间："
                         android:layout_weight="1.4"
                         android:textColor="#999"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />
                     <TextView
                         android:id="@+id/_item_admission_time"
                         android:text="公示语"
                         android:layout_weight="1"
                         android:textColor="#333"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />

                 </LinearLayout>
                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:paddingRight="15dp"
                     android:paddingLeft="15dp"
                     android:paddingTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:text="基地："
                         android:layout_weight="1.4"
                         android:textColor="#999"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />

                     <TextView
                         android:id="@+id/_item_base"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:text="公示语"
                         android:textColor="#333" />

                 </LinearLayout>
                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:paddingRight="15dp"
                     android:paddingLeft="15dp"
                     android:paddingTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:text="轮转科室："
                         android:layout_weight="1.4"
                         android:textColor="#999"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />

                     <TextView
                         android:id="@+id/_item_rotary_department"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:text="公示语"
                         android:textColor="#333" />

                 </LinearLayout>
                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:paddingRight="15dp"
                     android:paddingLeft="15dp"
                     android:paddingTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:text="计划入科时间："
                         android:layout_weight="1.4"
                         android:textColor="#999"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />
                     <TextView
                         android:id="@+id/_item_plan_your_admission_time"
                         android:text="公示语"
                         android:layout_weight="1"
                         android:textColor="#333"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />

                 </LinearLayout>
                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:paddingRight="15dp"
                     android:paddingLeft="15dp"
                     android:paddingTop="15dp"
                     android:layout_height="wrap_content">

                     <TextView
                         android:text="计划出科时间："
                         android:layout_weight="1.4"
                         android:textColor="#999"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />
                     <TextView
                         android:id="@+id/_item_plan_your_time"
                         android:text="公示语"
                         android:layout_weight="1"
                         android:textColor="#333"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content" />

                 </LinearLayout>



             </LinearLayout>
            <TextView
                android:id="@+id/_item_close"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="返回"
                android:background="#EFEFEF"
                />

        </LinearLayout>

    </FrameLayout>


</LinearLayout>