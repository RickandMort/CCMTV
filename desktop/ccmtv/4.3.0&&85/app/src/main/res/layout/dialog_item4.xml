<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--透明层 禁止事件下透-->

        <LinearLayout
            android:id="@+id/transparent_layer1"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cover_chart"
                android:layout_width="100dp"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/text1000"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/name"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:paddingLeft="3dp"
                android:text="高兴死了"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/hr_bg2"
                android:text="请选择你要购买的类型"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:textColor="#333"
                android:gravity="center|left"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:orientation="vertical">


                <RadioGroup
                    android:id="@+id/application_scheme_Group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="性别"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/application_scheme1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="电子书" />

                    <RadioButton
                        android:id="@+id/application_scheme2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="视频" />

                    <RadioButton
                        android:id="@+id/application_scheme3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电子书+视频" />
                    <RadioButton
                        android:id="@+id/application_scheme4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="序列号"/>

                </RadioGroup>


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.linlic.ccmtv.yx.activity.my.book.VerificationCodeView
                    android:layout_width="wrap_content"
                    android:id="@+id/icv_1"
                    app:icv_et_number="8"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/covering_layer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:visibility="visible"
                    android:orientation="horizontal" />
            </FrameLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#3997F9"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/i_understand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="取消"
                    android:gravity="center"
                    android:background="#3997F9"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    />
                <View
                    android:layout_width="0.1dp"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/i_understand2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="购买"
                    android:gravity="center"
                    android:background="#3997F9"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>



</LinearLayout>