<?xml version="1.0" encoding="utf-8"?><!-- 上传 item 1 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/down_item_group_select"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:button="@drawable/upload_down_items_select"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingRight="3dp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/down_item_group_img"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="@mipmap/img_default"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="@mipmap/img_yinying1" />
        </RelativeLayout>
        <!-- <ImageView
             android:layout_width="90dp"
             android:layout_height="60dp"
             android:layout_gravity="center"
             android:scaleType="fitXY"
             android:src="@mipmap/ys" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/down_item_group_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="name"
                android:textColor="#666" />

            <TextView
                android:id="@+id/down_item_group_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="0个视频"
                android:textColor="#b4b3b3" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>