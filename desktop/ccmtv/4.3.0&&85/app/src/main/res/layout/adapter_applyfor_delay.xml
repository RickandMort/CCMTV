<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#f0f0f0"
              >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/tv_ke_shi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="轮转科室："
                android:textColor="@color/black33"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="麻醉教学活动"
                android:textColor="@color/black33"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_ke_shi"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不通过"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:layout_centerVertical="true"
                android:background="@drawable/delay_status2"
                android:layout_alignParentRight="true"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/station_line"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/delay_time"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划轮转时间："
                android:textColor="#777777"
                android:textSize="14sp"
                android:layout_marginLeft="7dp"
                />

            <TextView
                android:id="@+id/tv_plan_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-08-03至2018-08-03"
                android:textColor="@color/black66"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:ellipsize="end"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="延期出科开始时间："
                android:textColor="@color/black66"
                android:textSize="14sp"
                android:layout_marginLeft="35dp"
                />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-08-03"
                android:textColor="@color/black66"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="延期出科结束时间："
                android:textColor="@color/black66"
                android:textSize="14sp"
                android:layout_marginLeft="35dp"
                />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-08-03"
                android:textColor="@color/black66"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/delay_reason"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请理由："
                android:textColor="@color/black66"
                android:textSize="14sp"
                android:layout_marginLeft="7dp"
                />

            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统出现问题"
                android:textColor="@color/black66"
                android:textSize="14sp"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:ellipsize="end"
                />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
