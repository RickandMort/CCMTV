<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.linlic.ccmtv.yx.kzbf.widget.RichText
            android:id="@+id/tv_vote_des_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            app:drawable_height="20dp"
            app:drawable_location="left"
            app:drawable_src="@mipmap/exams2_07"
            app:drawable_width="20dp" />

        <com.linlic.ccmtv.yx.kzbf.widget.RichText
            android:id="@+id/tv_vote_des_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7db9fd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">
        <!-- 定义一个水平的进度条 -->

        <com.linlic.ccmtv.yx.kzbf.widget.MyProgessLine
            android:id="@+id/mpl_vote_progress"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_weight="1"
            app:bmColor="#e0e0e0"
            app:bmHight="15dp"
            app:lineColor="@color/videofive_comment_reply"
            app:linehight="15dp" />

        <com.linlic.ccmtv.yx.kzbf.widget.RichText
            android:id="@+id/tv_vote_progress_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#7db9fd" />
    </LinearLayout>
</merge>