                                android:text="" />

                        </LinearLayout>-->

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/id_ll_daily_exam_stu_mark_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="打分日期:"
                        android:textColor="#999" />

                    <TextView
                        android:id="@+id/id_tv_daily_exam_stu_mark_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/id_ll_daily_exam_doctor_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <LinearLayout
                    android:id="@+id/id_ll_daily_exam_doctor_layout_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/id_ll_daily_exam_doctor_mark_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="打分日期:"
                            android:textColor="#999" />

                        <TextView
                            android:id="@+id/id_tv_daily_exam_doctor_mark_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/id_ll_daily_exam_doctor_student"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="考核学员:"
                            android:textColor="#999" />

                        <TextView
                            android:id="@+id/id_tv_daily_exam_doctor_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/id_ll_daily_exam_doctor_department"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="考核科室:"
                            android:textColor="#999" />

                        <TextView
                            android:id="@+id/id_tv_daily_exam_doctor_department"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/id_ll_daily_exam_doctor_doctor_teacher"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="带教老师:"
                            android:textColor="#999" />

                        <TextView
                            android:id="@+id/id_tv_daily_exam_doctor_doctor_teacher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="" />

                    </LinearLayout>

