<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/arrow_back"
                    android:layout_width="45dip"
                    android:layout_height="match_parent"
                    android:onClick="back">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="11dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/bark"/>
                </LinearLayout>




                <TextView
                    android:id="@+id/activity_title_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="请假"
                    android:textColor="#626262"
                    android:textSize="16sp"/>

            </FrameLayout>

            <include layout="@layout/activity_title4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                >

                <LinearLayout
                    android:id="@+id/untreated"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/untreated_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未处理"
                        android:textColor="@color/activity_login"
                        />

                    <View
                        android:id="@+id/untreated_view"
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/activity_login"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rejected"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/rejected_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已拒绝"
                        android:textColor="#333"
                        />

                    <View
                        android:id="@+id/rejected_view"
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:visibility="invisible"
                        android:background="@color/activity_login"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/have_passed"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/have_passed_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已通过"
                        android:textColor="#333"
                        />

                    <View
                        android:id="@+id/have_passed_view"
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:visibility="invisible"
                        android:background="@color/activity_login"
                        />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#efefef"
                />



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <GridView
                    android:id="@+id/leave_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="20dp"
                    android:numColumns="2"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:scrollbars="none"
                    android:verticalSpacing="15dp"/>


                <com.linlic.ccmtv.yx.widget.NodataEmptyLayout
                    android:id="@+id/tranining2_nodata"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    app:empty_des="当前还没有数据哦~"
                    android:visibility="gone"
                    app:text_color="#4492da"
                    app:empty_src="@mipmap/nodata_empty1"
                    app:empty_topLine="false"/>

            </FrameLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/leave_submit_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60000000"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/anniu35"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="请假人员："
                                />

                            <TextView
                                android:id="@+id/leave_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="陈葭"
                                android:textColor="#666"
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/leave_msg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="提交后则活动发布成功，是否确认提交？"
                            android:textColor="#666666"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/leave_button_layout"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#e1e1e1"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/leave_close_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="拒绝"
                                android:textColor="#999999"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="15dp"
                                android:layout_marginTop="15dp"
                                android:background="#e1e1e1"/>

                            <TextView
                                android:id="@+id/leave_submit_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="提交"
                                android:textColor="@color/custom_text_color"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


        </LinearLayout>
    </FrameLayout>




</LinearLayout>