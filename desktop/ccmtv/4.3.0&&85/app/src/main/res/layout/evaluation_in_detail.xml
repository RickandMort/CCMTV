<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/arrow_back"
            android:layout_width="45dip"
            android:layout_height="match_parent"
            android:onClick="back">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:scaleType="centerInside"
                android:src="@mipmap/bark" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_title_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="评价带教"
            android:textColor="#333"
            android:textSize="18sp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f7f7f7" />
    <ScrollView
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_createtime"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:text="打分时间：2019-06-20"
                android:textSize="13sp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black66"
                android:layout_height="wrap_content"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@mipmap/pingjia_top"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总得分"
                    android:textColor="#3897F9"
                    android:textSize="13sp"
                    android:background="@mipmap/total_score"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="24dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:id="@+id/score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="75"
                        android:textColor="#3897F9"
                        android:textSize="36sp"
                        android:layout_marginBottom="20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分"
                        android:textColor="#3897F9"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满分100分，80分以下为差评"
                    android:textColor="@color/black66"
                    android:textSize="11sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="22dp"
                    android:layout_marginBottom="15dp"
                    />

            </RelativeLayout>



            <com.linlic.ccmtv.yx.utils.MyGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:numColumns="2"
                android:verticalSpacing="10dp"
                android:scrollbars="none"
                />

            <TextView
                android:id="@+id/prompt"
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="*贡献率为该老师带教天数占本月所有老师带教总天数的百分比"
                android:textColor="@color/black66"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="10dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f7f7f7"
                android:layout_marginTop="15dp"/>


            <com.linlic.ccmtv.yx.utils.MyListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="#fff"
                android:scrollbars="none"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:layout_height="wrap_content">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#333"
                    android:text="评语："
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minLines="5"
                    android:background="@drawable/bg_edittext_normal"
                    android:gravity="top"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    />
                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="取消"
                    android:textColor="#fff"
                    android:background="@drawable/anniu23"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:onClick="setCancel"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                  />

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="wrap_content"
                    android:text="提交"
                    android:textColor="#fff"
                    android:onClick="setSubmit"
                    android:background="@drawable/anniu6"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



            </LinearLayout>
    </ScrollView>


</LinearLayout>