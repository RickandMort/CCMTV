                    />

                <com.linlic.ccmtv.yx.widget.NoScrollWebView
                    android:id="@+id/viewing_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    />


                <LinearLayout
