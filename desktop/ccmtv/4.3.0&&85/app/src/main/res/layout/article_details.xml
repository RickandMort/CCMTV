                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|left"
                                    android:layout_weight="1"
                                    android:gravity="center|left"
                                    android:text=""/>

                                <TextView
                                    android:id="@+id/video_menu_comment_item_id"
