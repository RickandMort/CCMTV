<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dow_Linyout_bg"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center|left"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@mipmap/video_icon_count" />

        <TextView
            android:id="@+id/video_play_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:text="@string/video_play_count"
            android:textColor="@color/video_detail_text_bg2"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center|right"
        android:layout_weight="1"
        android:gravity="center|right"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/video_icon_collection_layout"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/video_icon_collection_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/video_icon_collection" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/video_zambia_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/video_zambia_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="@color/video_detail_text_bg1"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/video_no_zambia_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/video_icon_zambia" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/video_download_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/video_download_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="@color/video_detail_text_bg1"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/video_download_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/video_icon_download" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
