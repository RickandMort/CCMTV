<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context="com.linlic.ccmtv.yx.kzbf.activity.PersonalHomeActivity">

    <LinearLayout
        android:id="@+id/ll_personal_home_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/kzbf_personal_home_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <!--<LinearLayout-->
            <!--android:id="@+id/arrow_back"-->
            <!--android:layout_width="45dip"-->
            <!--android:gravity="center"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:onClick="back">-->

            <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_marginLeft="11dp"-->
            <!--android:scaleType="centerInside"-->
            <!--android:src="@mipmap/login_back" />-->
            <!--</LinearLayout>-->

            <TextView
                android:id="@+id/personal_home_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/arrow_back"

                android:gravity="center"
                android:singleLine="true"
                android:text="个人主页"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="45dip"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:onClick="back">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/back_inva" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_kzbf_personal_message"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp">

                <ImageView
                    android:id="@+id/iv_kzbf_personal_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/kzbf_personal_message" />

                <ImageView
                    android:id="@+id/iv_kzbf_personal_message_red_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_point_pre"
                    android:visibility="gone" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_personal_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/rl_personal_home_titlebar"
            android:layout_toEndOf="@+id/ll_two_button"
            android:paddingLeft="@dimen/activity_horizontal_margin">


            <RelativeLayout
                android:id="@+id/personal_home_icon_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <com.linlic.ccmtv.yx.utils.CustomImageView
                    android:id="@+id/personal_home_icon"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/img_default" />

                <LinearLayout
                    android:id="@+id/ll_fouse"
                    android:layout_width="50dp"
                    android:layout_height="18dp"
                    android:layout_below="@+id/personal_home_icon"
                    android:layout_marginLeft="7.5dp"
                    android:background="@mipmap/kzbf_personal_foucs"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!--<ImageView-->
                    <!--android:id="@+id/personal_focus_img"-->
                    <!--android:layout_width="14dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:src="@mipmap/icon_personal_fouse" />-->

                    <!--<TextView-->
                    <!--android:id="@+id/personal_focus"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:text="已关注"-->
                    <!--android:textColor="#3997F7"-->
                    <!--android:textSize="10sp" />-->

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/personal_home_icon_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/personal_helper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小蕊"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/ll_personal_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/personal_helper"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/personal_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:text="辉瑞制药有限公司"
                        android:textColor="@color/main_bg"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/personal_drug"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/personal_helper"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/personal_company"
                        android:text="络活喜"
                        android:textColor="@color/main_bg"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_two_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/ll_send_message"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginRight="50dp"
                android:background="@mipmap/kzbf_personal_foucs"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/icon_personal_send_message" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="发信息"
                    android:textColor="#3997F7"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/ll_two_button"
            android:layout_marginTop="10dp"
            android:background="#EFEFEF" />

    </LinearLayout>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/indicator_personal_message_isread"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="1dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/personal_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/personal_recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <com.linlic.ccmtv.yx.widget.NodataEmptyLayout
        android:id="@+id/rl_personal_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:visibility="gone"
        app:empty_des="暂无消息"
        app:empty_src="@mipmap/nodata_empty" />

